{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "logicAppName": {
      "type": "string",
      "defaultValue": "DataService-DeleteEntity",
      "metadata": {
        "description": "Name of the Logic App."
      }
    },
    "logicAppLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "allowedValues": [
        "[resourceGroup().location]",
        "eastasia",
        "southeastasia",
        "centralus",
        "eastus",
        "eastus2",
        "westus",
        "northcentralus",
        "southcentralus",
        "northeurope",
        "westeurope",
        "uksouth",
        "japanwest",
        "japaneast",
        "brazilsouth",
        "australiaeast",
        "australiasoutheast",
        "westcentralus",
        "westus2"
      ],
      "metadata": {
        "description": "Location of the Logic App."
      }
    },
    "gateway_URI": {
      "type": "string",
      "defaultValue": "https://preprod-temp-gateway.azurewebsites.net"
    },
    "Aad_audience": {
      "type": "string"
    },
    "Aad_authority": {
      "type": "string"
    },
    "Aad_clientId": {
      "type": "string"
    },
    "Aad_secret": {
      "type": "securestring"
    },
    "Aad_tenant": {
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2016-06-01",
      "name": "[parameters('logicAppName')]",
      "location": "[parameters('logicAppLocation')]",
      "dependsOn": [],
      "properties": {
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "gateway_URI": {
              "type": "string",
              "defaultValue": "[parameters('gateway_URI')]"
            },
            "Aad_audience": {
              "type": "string",
              "defaultValue": "[parameters('Aad_audience')]"
            },
            "Aad_authority": {
              "type": "string",
              "defaultValue": "[parameters('Aad_authority')]"
            },
            "Aad_clientId": {
              "type": "string",
              "defaultValue": "[parameters('Aad_clientId')]"
            },
            "Aad_secret": {
              "type": "securestring",
              "defaultValue": "[parameters('Aad_secret')]"
            },
            "Aad_tenant": {
              "type": "string",
              "defaultValue": "[parameters('Aad_tenant')]"
            }
          },
          "triggers": {
            "request": {
              "type": "Request",
              "kind": "Http",
              "inputs": {
                "schema": {
                  "properties": {
                    "data": {
                      "properties": {},
                      "type": "object"
                    },
                    "entityId": {
                      "type": "string"
                    },
                    "entityName": {
                      "type": "string"
                    },
                    "ignoreInvalidFields": {
                      "type": "boolean"
                    }
                  },
                  "type": "object"
                }
              }
            }
          },
          "actions": {
            "HTTP": {
              "runAfter": {},
              "limit": {
                "timeout": "PT30S"
              },
              "type": "Http",
              "inputs": {
                "headers": {
                  "Content-Type": "application/json",
                  "entity": "@triggerBody()?['entityName']"
                },
                "method": "DELETE",
                "retryPolicy": {
                  "count": 2,
                  "interval": "PT5S",
                  "type": "fixed"
                },
                "uri": "@{parameters('gateway_URI')}/api/data/entity/@{triggerBody()?['entityId']}",
                "authentication": {
                  "audience": "@{parameters('Aad_audience')}",
                  "authority": "@{parameters('Aad_authority')}",
                  "clientId": "@{parameters('Aad_clientId')}",
                  "secret": "@{parameters('Aad_secret')}",
                  "tenant": "@{parameters('Aad_tenant')}",
                  "type": "ActiveDirectoryOAuth"
                }
              }
            },
            "Response": {
              "runAfter": {
                "HTTP": [
                  "Succeeded"
                ]
              },
              "type": "Response",
              "inputs": {
                "body": "@body('HTTP')",
                "statusCode": "@outputs('HTTP')['statusCode']"
              }
            }
          },
          "outputs": {}
        },
        "parameters": {}
      }
    }
  ],
  "outputs": {}
}